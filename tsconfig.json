{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "allowJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "rootDir": "src",
    "declaration": true,
    "baseUrl": ".",
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": ["es2018", "es2019", "es2020"],
    "types": ["jest", "node"]
  },
  "compileOnSave": false,
  "include": ["src"]
}
